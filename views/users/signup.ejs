<% layout("/layouts/boilerplate") %>
<div class="row justify-content-center form-container">
  <div class="card p-4 col-5 shadow form-inside-container">
    <form method="POST" action="/register" novalidate class="needs-validation">
      <div class="mb-2">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" required />
        <div class="invalid-feedback">Please choose a different username.</div>
      </div>
      <div class="mb-2">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" />
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">Enter Password</label>
        <input type="password" name="password" class="form-control" required />
        <div class="invalid-feedback">
          Password should be at least 6 characters.
        </div>
      </div>
      <br />
      <button class="btn btn-dark add-btn w-100">Sign Up</button>
    </form>

    <!-- Login link -->
    <div class="text-center mt-3">
      <p class="mb-0">Already have an account?</p>
      <a href="/login" class="btn btn-outline-secondary mt-1">Log In</a>
    </div>
  </div>
</div>
