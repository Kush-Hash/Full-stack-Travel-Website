<% layout("/layouts/boilerplate") %>
<script>
  let mapToken = "<%= process.env.MAP_TOKEN %>";
  let listing = <%-JSON.stringify(listing) %>;
</script>
<div class="row justify-content-center show-page">
  <div class="col-8">
    <div class="card show-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="<%=listing.image.filename %>"
      />
      <div class="card-body">
        <h5 class="card-title mt-2 show-title"><%= listing.title %></h5>
        <p class="card-text"><i>Owned by </i> <%= listing.owner.username %></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          <b>Price :</b> &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text">
          <b>Location :</b> <%= listing.location %> , <%= listing.country %>
        </p>

        <div class="show-page-btns">
          <% if(currUsr && listing.owner._id.equals(currUsr._id)){ %>
          <button
            onclick="window.location.href='http://localhost:8081/listings/<%=listing.id%>/edit'"
            class="btn btn-dark add-btn"
          >
            Edit
          </button>
          <form method="POST" action="/listings/<%=listing.id%>?_method=DELETE">
            <button class="btn btn-outline-dark">Delete</button>
          </form>
          <% } %>

          <button
            onclick="window.location.href='http://localhost:8081/listings'"
            class="btn btn-dark add-btn"
          >
            Return to Home
          </button>
        </div>
      </div>
    </div>
  </div>
  <!-- Maps -->

  <div class="col-8">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>

  <!-- reviews -->
  <div class="col-8">
    <% if(currUsr){ %>
    <div class="review-form-wrapper p-4 mb-4">
      <h3 class="mb-3" style="font-weight: 600">Add a Review</h3>
      <form
        method="POST"
        action="/listings/<%= listing.id %>/reviews"
        novalidate
        class="needs-validation"
      >
        <div>
          <fieldset class="starability-heart">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="0"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="comments" class="form-label">Add a Comment</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="4"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Comment field is empty</div>
        </div>
        <button
          class="btn add-btn btn-dark mb-2 px-4"
          style="background: #fe424d"
        >
          Submit
        </button>
      </form>
    </div>
    <% } %>

    <!-- Showing reviews -->
    <% if(listing.reviews && listing.reviews.length > 0) { %>
    <hr class="my-4" />
    <div class="all-reviews-section mb-4">
      <h4 class="mb-4" style="color: #fe424d; font-weight: 600">All Reviews</h4>
      <div class="row g-4">
        <% for(review of listing.reviews){ %>
        <div
          class="card col-12 col-md-5 ms-md-3 mb-3 review-card-custom"
          style="
            background: rgba(254, 66, 77, 0.07);
            border: none;
            border-radius: 18px;
          "
        >
          <div
            class="card-body review-card-body py-3 px-3 d-flex justify-content-between align-items-start"
          >
            <div>
              <h6
                class="card-title mb-2"
                style="color: #fe424d; font-size: 1rem; font-weight: 500"
              >
                @<%= review.author.username %>
              </h6>
              <div>
                <p
                  class="starability-result card-text"
                  data-rating="<%= review.rating %>"
                  style="font-size: 10px; color: #ffb400; letter-spacing: 0.1em"
                ></p>
              </div>
              <div class="card-text" style="font-size: 1.05rem">
                <%= review.comment %>
              </div>
            </div>
            <form
              method="POST"
              action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE"
              class="mb-3 ms-3"
            >
              <button class="btn btn-outline-dark btn-sm">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
<script src="/js/map.js"></script>
