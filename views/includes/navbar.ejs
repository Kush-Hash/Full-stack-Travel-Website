<style>
  .navbar-transparent {
    background-color: transparent !important;
    border: none !important;
    z-index: 1000;
  }
  .navbar-solid {
    background-color: white !important;
    border-bottom: 1px solid #e0e0e0 !important;
    transition: background-color 0.3s ease-in-out, border-bottom 0.5s ease;
    height: 4rem;
  }
  .btn-search {
    background-color: transparent;
    color: white;
    border-radius: 1.5rem;
    border: 1px solid white;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: white;
  }
  .btn-search i {
    display: inline;
    margin-right: 5px;
  }
  .search-input {
    border-radius: 1.5rem;
    padding: 0.5rem 2rem 0.5rem 2rem;
    width: 20rem;
    font-size: 1rem;
    background-color: transparent;
    border: 1px solid white;
    color: #e0e0e0;
  }
  .search-input::placeholder {
    color: #fff;
  }
  .search-input:focus {
    background-color: transparent;
    color: #fff;
    box-shadow: 0 0 0 0.2rem rgba(240, 237, 237, 0.25);
    border-color: #fff;
  }
  .navbar-solid .search-input {
    background-color: #fff;
    border: 0.5px solid rgba(0, 0, 0, 0.231);
    color: black;
  }
  .navbar-solid .search-input::placeholder {
    color: rgba(0, 0, 0, 0.425);
  }
  .navbar-solid .search-input:focus {
    color: black;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
    border-color: #fe424d;
  }
  .navbar-solid .btn-search {
    background-color: white;
    color: black;
    border: 1px solid rgba(0, 0, 0, 0.256);
  }
  .navbar-solid .btn-search:hover {
    background-color: #fe424d;
    color: white;
    border: none;
  }

  .home {
    color: white !important;
    transition: transform 0.2s ease-in;
  }
  .home:hover {
    transform: scale(1.1); /* Grows to 110% */
  }
  .hosting-button {
    color: white !important;
    border-radius: 2rem;
    padding: 0.5rem 1rem !important ;
  }
  .hosting-button:hover {
    background-color: #fff;
    color: black !important;
    transition: 0.3s ease;
  }
  .navbar-solid .hosting-button:hover {
    background-color: #fe424d;
    color: white !important;
    transition: 0.3s ease;
  }
  .navbar-solid .hosting-button,
  .navbar-solid .home {
    color: black !important;
  }
  .navbar-transparent .nav-btn {
    color: white !important;
    border-color: white !important;
  }

  /* For solid navbar - black text */
  .navbar-solid .nav-btn {
    color: black !important;
    border-color: black !important;
  }
  .nav-btn:hover {
    background-color: #fe424d !important;
    color: white !important;
    border-color: #fe424d !important;
  }
  @keyframes fadeInDown {
    0% {
      opacity: 0;
      transform: translateY(-30px); /* starts above */
    }
    100% {
      opacity: 1;
      transform: translateY(0); /* comes to original position */
    }
  }
  nav {
    opacity: 0; /* Start hidden */
    animation: fadeInDown 0.9s ease-out forwards;
    animation-delay: 0.3s;
  }
</style>
<nav
  id="mainNavbar"
  class="navbar navbar-expand-lg <%= isHome ? 'navbar-transparent fixed-top' : 'navbar-solid sticky-top shadow-sm' %>"
>
  <div class="container-fluid">
    <a class="navbar-brand ms-4" href="/listings/home"
      ><i class="fa-solid fa-earth-americas"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-2">
        <a class="nav-link home" href="/listings/home">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="form-inline d-flex" method="GET" action="/listings/home">
          <input
            class="form-control me-2 search-input"
            type="search"
            name="search"
            placeholder="Search destinations"
            aria-label="Search"
            value="<%= typeof search !== 'undefined' ? search : '' %>"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link me-3 hosting-button" href="/listings/new"
          >Become a Host</a
        >
        <% if(!currUsr){ %>
        <form action="/register">
          <button class="btn-outline-dark btn ouline-btn-red me-3 nav-btn">
            Register
          </button>
        </form>
        <form action="/login">
          <button class="btn-outline-dark btn ouline-btn-red me-3 nav-btn">
            login
          </button>
        </form>
        <%}%> <%if(currUsr){%>
        <form action="/logout">
          <button class="btn-outline-light btn ouline-btn-red me-3 nav-btn">
            Logout
          </button>
        </form>
        <%}%>
      </div>
    </div>
  </div>
</nav>
